<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.programacion.uelbosque.trikiproject.TrikiVsGameActivity"
    android:background="@color/colorBackground">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="PLAYERS:\n"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:id="@+id/tvPlayers"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:text="___________________"
                android:textColor="#ffffff"
                android:textSize="30dp"/>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/layoutTable"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_gravity="center"
                android:rowCount="3"
                android:columnCount="3">

                <Button
                    android:id="@+id/b1"
                    android:onClick="b1"/>
                <Button
                    android:id="@+id/b2"
                    android:onClick="b2"/>
                <Button
                    android:id="@+id/b3"
                    android:onClick="b3"/>
                <Button
                    android:id="@+id/b4"
                    android:onClick="b4"/>
                <Button
                    android:id="@+id/b5"
                    android:onClick="b5"/>
                <Button
                    android:id="@+id/b6"
                    android:onClick="b6"/>
                <Button
                    android:id="@+id/b7"
                    android:onClick="b7"/>
                <Button
                    android:id="@+id/b8"
                    android:onClick="b8"/>
                <Button
                    android:id="@+id/b9"
                    android:onClick="b9"/>

            </GridLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:text="___________________"
                android:textColor="#ffffff"
                android:textSize="30dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="Turn: "
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:id="@+id/tvTurn"/>




        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/layoutNew"
        android:gravity="center"
        android:layout_gravity="bottom|start"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="20dp"
        android:visibility="visible"
        android:onClick="newGame2">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:id="@+id/ibNew"
            android:src="@mipmap/fabnew" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="NEW GAME"
            android:textColor="#ffffff"
            android:textSize="20dp"/>


    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/layoutStatics"
        android:gravity="center"
        android:layout_gravity="bottom|end"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="20dp"
        android:visibility="visible"
        android:onClick="statics2">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ibStatics"
            android:src="@mipmap/fabstatics" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="STATICS"
            android:textColor="#ffffff"
            android:textSize="20dp"/>

    </LinearLayout>




    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="30dp"
        android:id="@+id/ibMenu"
        android:src="@mipmap/fabmenu"
        android:onClick="fabMenu" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_gravity="bottom|center"
        android:text="MENU"
        android:textColor="#ffffff"
        android:textSize="20dp"/>


</android.support.design.widget.CoordinatorLayout>
